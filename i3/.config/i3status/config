# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  colors = true
  color_good = "#2aa198"
  color_degraded = "#b58900"
  color_bad = "#dc322f"
  interval = 5
}

order += "wireless wlp3s0"
order += "ethernet enp0s25"
order += "disk /"
order += "cpu_usage"
order += "battery 0"
order += "battery 1"
order += "battery consolidated"
order += "volume master"
order += "tztime local"

wireless wlp3s0 {
  format_up = "W: (%quality at %essid, %bitrate)"
  format_down = "W: down"
}

ethernet enp0s25 {
  # if you use %speed, i3status requires root privileges
  format_up = "E: up"
  format_down = "E: down"
}

disk "/" {
  format = "%free"
}

cpu_usage {
  format = "%usage"
}

battery 0 {
  format = "BAT 0 : %status %percentage"
  format_down = "No battery"
  status_chr = "⚡"
  status_bat = "▤"
  status_full = "◼"
  status_unk = "?"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
}

battery 1 {
  format = "BAT 1 : %status %percentage"
  format_down = "No battery"
  status_chr = "⚡"
  status_bat = "▤"
  status_full = "◼"
  status_unk = "?"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
}

battery consolidated {
  format = "PWR: %status %remaining %emptytime"
  format_down = "No battery"
  status_chr = "⚡ CHR"
  status_bat = "▤ BAT"
  status_full = "◼ FULL"
  status_unk = "? UNK"
  path = "/run/user/1000/battcon.uevent"
  low_threshold = 10
}

volume master {
  format = "♪: %volume"
  format_muted = "♪: muted"
  device = "hw:1"
  mixer = "Master"
  mixer_idx = 0
}

tztime local {
  format = "%Y-%m-%d %H:%M:%S"
}
