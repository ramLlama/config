# Setup environment variables
export PATH=$(fish -c 'echo $PATH' | tr ' ' ':')
export SSH_AUTH_SOCK=$(fish -c 'echo $SSH_AUTH_SOCK')

# Make sure geoclue starts before redshift
/usr/bin/lockrun -w 5 /run/user/`id -u $USER`/geoclue-agent.lock /usr/lib/geoclue-2.0/demos/agent &

# Daemons
/usr/bin/start-pulseaudio-x11

/usr/bin/lockrun -w 5 /run/user/`id -u $USER`/blueman-applet.lock blueman-applet &
/usr/bin/lockrun -w 5 /run/user/`id -u $USER`/dropbox.lock /usr/bin/dropbox &
/usr/bin/lockrun -w 5 /run/user/`id -u $USER`/dunst.lock dunst &
/usr/bin/lockrun -w 5 /run/user/`id -u $USER`/feh-wallpaper-shuffle.sh.lock $HOME/scripts/feh-wallpaper-shuffle.sh /home/ram/Dropbox/wallpapers 15m &
/usr/bin/lockrun -w 5 /run/user/`id -u $USER`/syndaemon.lock syndaemon -i 0.5 &
/usr/bin/lockrun -w 5 /run/user/`id -u $USER`/xbindkeys.lock xbindkeys -n &
/usr/bin/lockrun -w 5 /run/user/`id -u $USER`/indicator-kdeconnect.lock indicator-kdeconnect &
/usr/bin/lockrun -w 5 /run/user/`id -u $USER`/pasystray.lock pasystray &


# Trackpoint Middle Button
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation" 1
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Button" 2
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Timeout" 200
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Axes" 6 7 4 5
xinput set-prop "TPPS/2 IBM TrackPoint" "Device Accel Constant Deceleration" 0.40
